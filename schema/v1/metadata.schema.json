{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP Registry Entry Array",
    "type": [
        "object",
        "array"
    ],
    "items": {
        "type": "object",
        "required": [
            "name",
            "description",
            "repository"
        ],
        "properties": {
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "license": {
                "type": "string"
            },
            "repository": {
                "type": "string",
                "format": "uri"
            },
            "packages": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "registry",
                        "name"
                    ],
                    "properties": {
                        "registry": {
                            "type": "string",
                            "enum": [
                                "npm",
                                "github",
                                "gitlab",
                                "bitbucket",
                                "docker",
                                "pypi"
                            ],
                            "example": "npm"
                        },
                        "name": {
                            "type": "string",
                            "example": "@21st-dev/magic"
                        },
                        "version": {
                            "type": "string",
                            "example": "0.0.46"
                        },
                        "command": {
                            "type": "string",
                            "description": "Command to run the package",
                            "example": "mcp"
                        },
                        "arguments": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "description"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "environment": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "description"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "remotes": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "transport_type",
                        "url"
                    ],
                    "properties": {
                        "transport_type": {
                            "type": "string",
                            "enum": [
                                "streamable",
                                "sse"
                            ]
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            }
        }
    }
}