{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP Registry Entry Array",
    "type": [
        "object",
        "array"
    ],
    "items": {
        "type": "object",
        "required": [
            "name",
            "description",
            "repository",
            "license"
        ],
        "properties": {
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "license": {
                "type": "string"
            },
            "repository": {
                "type": "object",
                "required": [
                    "url"
                ],
                "properties": {
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            },
            "packages": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "registry",
                        "name",
                        "version",
                        "command"
                    ],
                    "properties": {
                        "registry": {
                            "type": "string",
                            "enum": [
                                "npm",
                                "github",
                                "gitlab",
                                "bitbucket",
                                "docker",
                                "pypi"
                            ]
                        },
                        "name": {
                            "type": "string"
                        },
                        "version": {
                            "type": "object",
                            "required": [
                                "number",
                                "release_date"
                            ],
                            "properties": {
                                "number": {
                                    "type": "string"
                                },
                                "release_date": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            }
                        },
                        "command": {
                            "type": "object",
                            "required": [
                                "name",
                                "positional_arguments"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "subcommands": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "positional_arguments": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "named_arguments": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "short_flag",
                                            "description"
                                        ],
                                        "properties": {
                                            "short_flag": {
                                                "type": "string"
                                            },
                                            "requires_value": {
                                                "type": "boolean"
                                            },
                                            "required": {
                                                "type": "boolean"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "environment_variables": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "description",
                                    "required",
                                    "default_value"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "required": {
                                        "type": "boolean"
                                    },
                                    "default_value": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "remotes": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "transport_type",
                        "url"
                    ],
                    "properties": {
                        "transport_type": {
                            "type": "string",
                            "enum": [
                                "streamable",
                                "sse"
                            ]
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            }
        }
    }
}